@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model MvcMovie.Models.Views.MovieViewModel

@{
    ViewData["Title"] = Localizer["EditTitle"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ReleaseDate" class="form-control" />
            </div>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Genre" class="form-control" />
            </div>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Rating" class="form-control" />
            </div>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>        
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Edit" class="btn btn-primary"/>
            </div>
        </div>
</form>
