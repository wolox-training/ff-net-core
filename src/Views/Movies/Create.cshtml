@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model MvcMovie.Models.Views.MovieViewModel

@{
    ViewData["Title"] = Localizer["CreateTitle"];
}

<form asp-action="Create">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Title" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ReleaseDate" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Genre" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
</form>
